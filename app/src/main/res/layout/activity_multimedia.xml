<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/colorPrimaryLight"
    tools:context=".ActividadesPermitidasActivity">

    <include layout="@layout/active_bar_toollbar"/>

    <ScrollView
        android:layout_width="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:orientation="vertical">

       <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/azulnegro"
        android:padding="5sp"
        android:layout_margin="5sp">

        <ImageView
            android:id="@+id/acampa"
            android:layout_width="200sp"
            android:layout_height="150sp"
            android:background="@drawable/acampa" />

        <TextView
            android:id="@+id/acampar"
            android:layout_toRightOf="@id/acampa"
            android:layout_marginTop="30sp"
            android:gravity="center"
            android:padding="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="ACAMPAR" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="80sp"
            android:numStars="5"
            android:scaleY="0.3"
            android:scaleX="0.3"
            android:rating="4"
            android:theme="@style/RatingBar"
            android:layout_toStartOf="@id/acampar"
            android:layout_toRightOf="@id/acampa" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeCamina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/azulnegro"
        android:padding="5sp"
        android:layout_margin="5sp">

        <ImageView
            android:id="@+id/camina"
            android:layout_width="200sp"
            android:layout_height="150sp"
            android:background="@drawable/caminatas" />

        <TextView
            android:id="@+id/caminar"
            android:layout_toRightOf="@id/camina"
            android:layout_marginTop="50sp"
            android:padding="20sp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="CAMINATA" />

        <RatingBar
            android:id="@+id/ratingBar2"
            android:layout_width="wrap_content"
            android:theme="@style/RatingBar"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="80sp"
            android:numStars="5"
            android:scaleY="0.3"
            android:scaleX="0.3"
            android:rating="5"
            android:layout_toStartOf="@id/camina"
            android:layout_toRightOf="@id/caminar" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeCiclismo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/azulnegro"
        android:padding="5sp"
        android:layout_margin="5sp">

        <ImageView
            android:id="@+id/ciclismop"
            android:layout_width="200sp"
            android:layout_height="150sp"
            android:background="@drawable/ciclista" />

        <TextView
            android:id="@+id/ciclismo"
            android:layout_toRightOf="@id/ciclismop"
            android:layout_marginTop="50sp"
            android:padding="20sp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="CICLISMO" />

        <RatingBar
            android:id="@+id/ratingBar3"
            android:theme="@style/RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="80sp"
            android:numStars="5"
            android:scaleY="0.3"
            android:scaleX="0.3"
            android:rating="4"
            android:layout_toStartOf="@id/ciclismo"
            android:layout_toRightOf="@id/ciclismop" />
    </RelativeLayout>
