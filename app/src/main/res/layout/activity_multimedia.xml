            <RelativeLayout
                android:id="@+id/relativeFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/azulnegro"
                android:padding="5sp"
                android:layout_margin="5sp">

                <ImageView
                    android:id="@+id/foto"
                    android:layout_width="200sp"
                    android:layout_height="150sp"
                    android:background="@drawable/fotos" />

                <TextView
                    android:id="@+id/fotos"
                    android:layout_toRightOf="@id/foto"
                    android:layout_marginTop="30sp"
                    android:padding="20sp"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="FOTOGRAFIA" />

                <RatingBar
                    android:id="@+id/ratingBar5"
                    android:theme="@style/RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="80sp"
                    android:numStars="5"
                    android:scaleY="0.3"
                    android:scaleX="0.3"
                    android:rating="4"
                    android:layout_toStartOf="@id/foto"
                    android:layout_toRightOf="@id/fotos" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativePesca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/azulnegro"
                android:padding="5sp"
                android:layout_margin="5sp">

                <ImageView
                    android:id="@+id/pesca"
                    android:layout_width="200sp"
                    android:layout_height="150sp"
                    android:background="@drawable/pescas" />

                <TextView
                    android:id="@+id/pescar"
                    android:layout_toRightOf="@id/pesca"
                    android:layout_marginTop="10sp"
                    android:padding="20sp"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="PESCA DEPORTIVA" />

                <RatingBar
                    android:id="@+id/ratingBar6"
                    android:theme="@style/RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="80sp"
                    android:numStars="5"
                    android:scaleY="0.3"
                    android:scaleX="0.3"
                    android:rating="3.5"
                    android:layout_toStartOf="@id/pescar"
                    android:layout_toRightOf="@id/pesca" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>