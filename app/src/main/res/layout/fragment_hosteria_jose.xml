<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/joseMaria"
    android:layout_height="match_parent"
    tools:context=".alojamiento.HosteriaJose">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/josemaria"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:layout_marginStart="20sp"
                android:text="@string/categoria"
                android:textColor="@color/colorPrimaryLight"/>

            <RatingBar
                android:id="@+id/calificacion"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:theme="@style/RatingBar"
                android:numStars="5"
                android:rating="4.5"
                android:scaleX="0.5"
                android:scaleY="0.5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/telefono"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:layout_marginStart="20sp"
                android:textColor="@color/colorPrimaryLight"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@color/white"
                android:layout_margin="10dp"
                android:text="0999091902"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryLight"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:layout_marginStart="20sp"
                android:text="@string/email"/>
            <Button
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:textAllCaps="false"
                android:background="@color/white"
                android:layout_margin="10dp"
                android:text="josemariaecolodge@gmail.com"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryLight"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:layout_marginStart="20sp"
                android:text="@string/sitios"/>

            <Button
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:textAllCaps="false"
                android:background="@color/white"
                android:layout_margin="10dp"
                android:text="hosteriajosemaria.com"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/galeria"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:layout_marginStart="20sp"
                android:textColor="@color/colorPrimaryLight"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img1"
                        android:background="@drawable/img5"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_marginRight="7dp"/>

                    <ImageView
                        android:id="@+id/img2"
                        android:background="@drawable/img1"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_toRightOf="@id/img1"
                        android:layout_marginRight="7dp"/>

                    <ImageView
                        android:id="@+id/img3"
                        android:background="@drawable/img2"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_toRightOf="@id/img2"
                        android:layout_marginRight="7dp"/>

                    <ImageView
                        android:id="@+id/img4"
                        android:background="@drawable/img3"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_toRightOf="@id/img3"
                        android:layout_marginRight="7dp"/>

                    <ImageView
                        android:id="@+id/img5"
                        android:layout_width="200dp"
                        android:background="@drawable/img4"
                        android:layout_height="150dp"
                        android:layout_toRightOf="@id/img4"
                        android:layout_marginRight="7dp"/>


                </RelativeLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mapa"
                    android:textStyle="bold"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="20sp"
                    android:layout_marginBottom="20sp"
                    android:textColor="@color/colorPrimaryLight"/>

                <com.google.android.gms.maps.MapView
                    android:layout_marginTop="15sp"
                    android:id="@+id/jose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="30sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical"/>

        </LinearLayout>
    </ScrollView>




</FrameLayout>